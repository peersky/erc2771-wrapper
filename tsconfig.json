{
  "compilerOptions": {
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "module": "commonjs"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
